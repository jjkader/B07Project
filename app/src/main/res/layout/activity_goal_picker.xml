<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/goalPicker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8dbe2"
    tools:context=".DailyActivity.GoalPicker">
    <TextView
        android:id="@+id/pickTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick your goals!"
        android:textAlignment="center"
        android:layout_marginTop="75dp"
        android:textSize="40sp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:onClick="pickGoals"
        android:textColor="#1b1b1e"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pick1"
        app:layout_constraintTop_toTopOf="parent"
        />

    <CheckBox
        android:id="@+id/pick1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pickGoals"
        android:fontFamily="monospace"
        android:text="Used public transport"
        android:textColor="#1b1b1e"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/pickTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:fontFamily="monospace"
        android:onClick="pickGoals"
        android:textColor="#1b1b1e"
        android:id="@+id/pick2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Used a reusable bottle"
        app:layout_constraintBottom_toTopOf="@+id/pick3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick1"
        />
    <CheckBox
        android:fontFamily="monospace"
        android:textColor="#1b1b1e"
        android:id="@+id/pick3"
        android:layout_width="wrap_content"
        android:onClick="pickGoals"
        android:layout_height="wrap_content"
        android:text="Ate plant-based and non-GMO foods"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick2"/>
    <CheckBox
        android:fontFamily="monospace"
        android:textColor="#1b1b1e"
        android:id="@+id/pick4"
        android:onClick="pickGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Used wooden cutlery that can be composted"
        app:layout_constraintBottom_toTopOf="@+id/pick5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick3"/>

    <CheckBox
        android:id="@+id/pick5"
        android:onClick="pickGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Thrifted when clothes and furniture shopping"
        android:textColor="#1b1b1e"
        app:layout_constraintBottom_toTopOf="@+id/pick6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick4" />

    <CheckBox
        android:fontFamily="monospace"
        android:onClick="pickGoals"
        android:textColor="#1b1b1e"
        android:id="@+id/pick6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reduced water usage"
        app:layout_constraintBottom_toTopOf="@+id/pick7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick5"
        />
    <CheckBox
        android:fontFamily="monospace"
        android:onClick="pickGoals"
        android:textColor="#1b1b1e"
        android:id="@+id/pick7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donated older clothes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick6"
        />
    <Button
        android:id="@+id/nextButton"
        android:text="See Progress"
        android:textColor="#d8dbe2"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="25sp"
        android:backgroundTint="#009999"
        android:layout_marginBottom="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick7"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>